<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OtpActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:layout_gravity="center"
    >
    <ImageView
        android:src="@drawable/otpvefiy"
        android:layout_width="250dp"
        android:layout_height="250dp"
        />
    <TextView
        android:id="@+id/phoneLble"
        android:text="Verify+..."
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#0060DA"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Enter your code to verify your number"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<androidx.cardview.widget.CardView
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    >
<EditText
    android:id="@+id/code1"
    android:hint="0"
    android:layout_weight="1"
    android:background="@drawable/backgrounds_shapes"
    android:gravity="center"
    android:inputType="number"
    android:maxLength="1"
    android:maxLines="1"
    android:textSize="17sp"
    android:padding="10dp"
    android:ems="1"
    android:layout_width="0dp"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    />
    <EditText
        android:id="@+id/code2"
        android:hint="0"
        android:layout_weight="1"
        android:background="@drawable/backgrounds_shapes"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textSize="17sp"
        android:padding="10dp"
        android:ems="1"
        android:layout_width="0dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/code3"
        android:hint="0"
        android:layout_weight="1"
        android:background="@drawable/backgrounds_shapes"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textSize="17sp"
        android:padding="10dp"
        android:ems="1"
        android:layout_width="0dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/code4"
        android:hint="0"
        android:layout_weight="1"
        android:background="@drawable/backgrounds_shapes"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textSize="17sp"
        android:padding="10dp"
        android:ems="1"
        android:layout_width="0dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/code5"
        android:hint="0"
        android:layout_weight="1"
        android:background="@drawable/backgrounds_shapes"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textSize="17sp"
        android:padding="10dp"
        android:ems="1"
        android:layout_width="0dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/code6"
        android:hint="0"
        android:layout_weight="1"
        android:background="@drawable/backgrounds_shapes"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:maxLines="1"
        android:textSize="17sp"
        android:padding="10dp"
        android:ems="1"
        android:layout_width="0dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"/>

</LinearLayout>
        <Button
            android:id="@+id/continueBtn01"
            android:text="Continue"
            app:backgroundTint="#0060DA"
            android:textAllCaps="false"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="6dp"

            android:textStyle="bold"
            />
    </LinearLayout>


</LinearLayout>